<% if product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: product, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name do %>Product Name<% end %>
    <%= form.text_field :name, id: :product_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :repository_name do %>Repository Name <% end %>
    <%= form.text_field :repository_name, id: :product_repository_name, class: 'form-control', list: 'repositories' %>
    <datalist id="repositories"></datalist>
  </div>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
