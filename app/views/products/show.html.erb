<%=
  render partial: '/kanban', locals: {
      milestone: @milestone,
      product: @product,
      milestones: @organization.milestones_by_product(@product),
      project_cards: -> (title) { @organization.project_cards_by_product_and_milestone(@product, @milestone).select { |card| card.project_column.name == title } },
      current_path: product_path(@product),
  }
%>
