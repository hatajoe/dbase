<%=
  render partial: '/kanban', locals: {
      milestone: @milestone,
      product: nil,
      milestones: @organization.milestones_by_product(nil),
      project_cards: -> (title) { @organization.project_cards_by_product_and_milestone(nil, @milestone).select { |card| card.project_column.name == title } },
      current_path: organization_path(@organization),
  }
%>
